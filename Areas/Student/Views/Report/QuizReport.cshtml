                                                                @if (isCorrect)
                                                                {
                                                                    foreach (string ans in studentSolution)
                                                                    {
                                                                        <input type="text" id="matching-solution" class="text-center true-answer" name="solution" value="@ans" readonly />
                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    if (studentSolution != null)
                                                                    {
                                                                        foreach (string ans in studentSolution)
